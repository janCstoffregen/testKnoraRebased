@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix dct: <http://purl.org/dc/terms/>.
@prefix human: <http://www.knora.org/ontology/human#>.
@prefix philo: <http://www.knora.org/ontology/philosophy#>.

<http://www.knora.org/ontology/philosophy>
	a owl:Ontology;
	dct:title "An ontology about philosophy"@en;
	dct:description """Formal description of philosophy, general subclasses, related classes, properties, and instances."""@en;
	dct:creator "Hans Cools, software developer, NIE-INE, Basel University, Switzerland"@en;
	dct:contributor "Prof. Dr. Ueli Zahnd, History of Christianity, University of Basel, Switzerland"@en.

#
# CLASSES
#

philo:Philosophy
	a owl:Class;
	rdfs:label "philosophy"@en, "Philosophie"@de;
	rdfs:comment """."""@en;
	rdfs:subClassOf human:ThoughtBody. #*

philo:Metaphysics
	a owl:Class;
	rdfs:label "Metaphysics"@en, "Metaphysik"@de;
	rdfs:comment """."""@en;
	rdfs:subClassOf philo:Philosophy. #*

